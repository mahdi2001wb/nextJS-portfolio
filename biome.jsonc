{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"bracketSpacing": true
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		},
		"linter": {
			"enabled": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {
				"useSortedClasses": {
					"level": "warn",
					"fix": "safe",
					"options": {
						"functions": ["clsx", "cva", "cn"]
					}
				}
			},
			"suspicious": {
				"noArrayIndexKey": {
					"level": "warn"
				}
			},
			"a11y": {
				"useSemanticElements": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtml": "warn"
			},
			"correctness": {
				"noUnusedVariables": {
					"fix": "safe",
					"level": "warn"
				},
				"noUnusedImports": {
					"fix": "unsafe",
					"level": "warn"
				}
			},
			"recommended": true
		}
	}
}
